<div class="max-w-5xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">My Orders</h1>

  <% if @orders.any? %>
    <div class="space-y-6">
      <% @orders.each do |order| %>
        <div class="bg-white rounded-lg shadow p-6">
          <div class="flex justify-between items-start mb-4">
            <div>
              <h3 class="text-lg font-semibold">Order #<%= order.id %></h3>
              <p class="text-gray-600 text-sm">Placed on <%= order.created_at.strftime("%B %d, %Y") %></p>
            </div>
            <div class="text-right">
              <span class="px-3 py-1 rounded-full text-sm font-semibold <%= order.paid? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= order.status.titleize %>
              </span>
              <div class="mt-2 font-bold text-lg">$<%= number_with_precision(order.total, precision: 2) %></div>
            </div>
          </div>

          <div class="border-t pt-4">
            <div class="text-sm text-gray-600 mb-2">
              <%= pluralize(order.order_items.count, 'item') %>
            </div>
            <div class="flex gap-2">
              <% order.order_items.limit(4).each do |item| %>
                <div class="w-16 h-16 bg-gray-200 rounded">
                  <% if item.product.images.attached? %>
                    <%= image_tag item.product.images.first, class: "w-full h-full object-cover rounded" %>
                  <% end %>
                </div>
              <% end %>
              <% if order.order_items.count > 4 %>
                <div class="w-16 h-16 bg-gray-100 rounded flex items-center justify-center text-gray-600 text-sm">
                  +<%= order.order_items.count - 4 %>
                </div>
              <% end %>
            </div>
          </div>

          <div class="mt-4 pt-4 border-t">
            <%= link_to "View Details", order_path(order), class: "text-blue-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow p-12 text-center">
      <svg class="w-24 h-24 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
      </svg>
      <h2 class="text-2xl font-semibold mb-2">No orders yet</h2>
      <p class="text-gray-600 mb-6">Start shopping to place your first order!</p>
      <%= link_to "Browse Products", products_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700" %>
    </div>
  <% end %>
</div>
