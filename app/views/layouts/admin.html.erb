<!DOCTYPE html>
<html>
  <head>
    <title>Laundering Laundry - Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-100">
    <div class="min-h-screen flex">
      <!-- Sidebar -->
      <div class="w-64 bg-gray-900 text-white">
        <div class="p-6">
          <h1 class="text-2xl font-bold">Laundering Laundry</h1>
          <p class="text-sm text-gray-400">Admin Panel</p>
        </div>

        <nav class="mt-6">
          <%= link_to admin_root_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if current_page?(admin_root_path)}" do %>
            <span>Dashboard</span>
          <% end %>

          <%= link_to admin_products_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if controller_name == 'products'}" do %>
            <span>Products</span>
          <% end %>

          <%= link_to admin_categories_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if controller_name == 'categories'}" do %>
            <span>Categories</span>
          <% end %>

          <%= link_to admin_orders_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if controller_name == 'orders'}" do %>
            <span>Orders</span>
          <% end %>

          <%= link_to admin_customers_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if controller_name == 'customers'}" do %>
            <span>Customers</span>
          <% end %>

          <%= link_to admin_provinces_path, class: "flex items-center px-6 py-3 hover:bg-gray-800 #{'bg-gray-800' if controller_name == 'provinces'}" do %>
            <span>Tax Rates</span>
          <% end %>

          <div class="border-t border-gray-700 my-4"></div>

          <%= link_to root_path, class: "flex items-center px-6 py-3 hover:bg-gray-800" do %>
            <span>View Store</span>
          <% end %>

          <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "flex items-center px-6 py-3 hover:bg-gray-800" do %>
            <span>Logout</span>
          <% end %>
        </nav>
      </div>

      <!-- Main Content -->
      <div class="flex-1">
        <!-- Header -->
        <header class="bg-white shadow">
          <div class="px-8 py-4">
            <div class="flex justify-between items-center">
              <h2 class="text-2xl font-bold text-gray-800"><%= yield :page_title %></h2>
              <div class="text-sm text-gray-600">
                Logged in as <%= current_user.email %>
              </div>
            </div>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if flash[:notice] %>
          <div class="mx-8 mt-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <% if flash[:alert] %>
          <div class="mx-8 mt-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <!-- Page Content -->
        <main class="p-8">
          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>