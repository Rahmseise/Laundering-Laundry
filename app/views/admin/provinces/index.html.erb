<% content_for :page_title, "Tax Rates" %>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Province</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Code</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">GST Rate</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">PST Rate</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">HST Rate</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total Tax</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @provinces.each do |province| %>
        <tr>
          <td class="px-6 py-4 font-medium"><%= province.name %></td>
          <td class="px-6 py-4"><%= province.code %></td>
          <td class="px-6 py-4"><%= number_with_precision(province.gst_rate, precision: 2) %>%</td>
          <td class="px-6 py-4"><%= number_with_precision(province.pst_rate, precision: 2) %>%</td>
          <td class="px-6 py-4"><%= number_with_precision(province.hst_rate, precision: 2) %>%</td>
          <td class="px-6 py-4 font-semibold"><%= number_with_precision(province.total_tax_rate, precision: 2) %>%</td>
          <td class="px-6 py-4">
            <%= link_to "Edit", edit_admin_province_path(province), class: "text-blue-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>