<% content_for :page_title, "Edit Tax Rates - #{@province.name}" %>

<div class="max-w-2xl">
  <div class="bg-white rounded-lg shadow p-6">
    <%= form_with model: [:admin, @province], class: "space-y-6" do |f| %>
      <div class="bg-blue-50 border border-blue-200 p-4 rounded-lg mb-4">
        <p class="text-sm text-blue-800">
          Editing tax rates for <strong><%= @province.name %></strong>. Changes will affect all future orders.
        </p>
      </div>

      <div>
        <%= f.label :gst_rate, "GST Rate (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :gst_rate, step: 0.01, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :pst_rate, "PST Rate (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :pst_rate, step: 0.01, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= f.label :hst_rate, "HST Rate (%)", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.number_field :hst_rate, step: 0.01, class: "w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="text-sm font-medium text-gray-700">Total Tax Rate</div>
        <div class="text-2xl font-bold text-gray-900">
          <%= number_with_precision(@province.total_tax_rate, precision: 2) %>%
        </div>
      </div>

      <div class="flex gap-4">
        <%= f.submit "Update Tax Rates", class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 cursor-pointer" %>
        <%= link_to "Cancel", admin_provinces_path, class: "px-6 py-2 border rounded-lg hover:bg-gray-50" %>
      </div>
    <% end %>
  </div>
</div>