<% content_for :page_title, "Categories" %>

<div class="mb-6 flex justify-end">
  <%= link_to "Add New Category", new_admin_category_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @categories.each do |category| %>
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-xl font-semibold mb-2"><%= category.name %></h3>
      <p class="text-gray-600 text-sm mb-4"><%= category.description %></p>
      <div class="text-sm text-gray-500 mb-4">
        <%= pluralize(category.products.count, 'product') %>
      </div>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_admin_category_path(category), class: "text-blue-600 hover:underline" %>
        <%= link_to "Delete", admin_category_path(category),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "text-red-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>