<% content_for :page_title, "Products" %>

<div class="mb-6 flex justify-between items-center">
  <div class="flex gap-4">
    <%= form_with url: admin_products_path, method: :get, class: "flex gap-2" do |f| %>
      <%= f.text_field :search, placeholder: "Search products...", value: params[:search], class: "px-4 py-2 border rounded-lg" %>
      <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
          { include_blank: "All Categories" }, class: "px-4 py-2 border rounded-lg" %>
      <%= f.submit "Search", class: "px-6 py-2 bg-gray-600 text-white rounded-lg hover:bg-gray-700 cursor-pointer" %>
    <% end %>
  </div>

  <%= link_to "Add New Product", new_admin_product_path, class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Image</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Product</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Category</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Price</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Stock</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @products.each do |product| %>
        <tr>
          <td class="px-6 py-4">
            <% if product.images.attached? %>
              <%= image_tag product.images.first, class: "w-16 h-16 object-cover rounded" %>
            <% else %>
              <div class="w-16 h-16 bg-gray-200 rounded"></div>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <div class="font-medium text-gray-900"><%= product.name %></div>
            <div class="text-sm text-gray-500"><%= product.sku %></div>
          </td>
          <td class="px-6 py-4 text-sm text-gray-900">
            <%= product.category.name %>
          </td>
          <td class="px-6 py-4">
            <% if product.on_sale? %>
              <div class="text-red-600 font-semibold">$<%= number_with_precision(product.sale_price, precision: 2) %></div>
              <div class="text-gray-500 text-sm line-through">$<%= number_with_precision(product.price, precision: 2) %></div>
            <% else %>
              <div class="font-semibold">$<%= number_with_precision(product.price, precision: 2) %></div>
            <% end %>
          </td>
          <td class="px-6 py-4">
            <span class="<%= product.stock_quantity < 10 ? 'text-red-600' : 'text-gray-900' %> font-semibold">
              <%= product.stock_quantity %>
            </span>
          </td>
          <td class="px-6 py-4 text-sm">
            <%= link_to "View", admin_product_path(product), class: "text-blue-600 hover:underline mr-3" %>
            <%= link_to "Edit", edit_admin_product_path(product), class: "text-green-600 hover:underline mr-3" %>
            <%= link_to "Delete", admin_product_path(product), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-4">
  <%= paginate @products %>
</div>